<h1>Listing tasks</h1>

<%= link_to complete_index_path, complete_index_path %>

<table>
  <tr>
    <th>Project</th>
    <th>Name</th>
    <th>Description</th>
    <th>Due date</th>
    <th>State</th>
    <th>Completion date</th>
    <th>Priority</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.project_id %></td>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.due_date %></td>
    <td><%= task.state %></td>
    <td><%= task.completion_date %></td>
    <td><%= task.priority %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

